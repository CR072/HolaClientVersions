<%- include('../partials/head') %>
<%- include('../partials/css') %>
<%- include('../scripts/wrapper') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/topnav') %>
<%- include('../scripts/containers') %>
<%- include('../partials/alert') %>
<div class="row">
    <% for (let i = 0, len = products.length; i < len; i++) { %>
    <div class="col-12 col-lg-4 col-xl-4">
        <div class="card">
            <div class="card-header"><%= products[i].name %> - $<%= products[i].price %>
              <div class="card-action">
              </div>
            </div>
            <div class="card-body">
              <div class="chart-container-2">
                <center>
                <img style="max-width: 190px; border-radius: 15px;" src="<%= products[i].icon %>">
                </center>
               </div>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center">
                <tbody>
                  <tr>
                    <td><i class="bi bi-memory text-white mr-2"></i> RAM</td>
                    <td>-</td>
                    <td><%= products[i].resources.ram %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-hdd text-light-1 mr-2"></i> DISK</td>
                    <td>-</td>
                    <td><%= products[i].resources.disk %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-cpu text-light-2 mr-2"></i> CPU</td>
                    <td>-</td>
                    <td><%= products[i].resources.cpu %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-usb-c text-light-3 mr-2"></i> ALLOCATIONS</td>
                    <td>-</td>
                    <td><%= products[i].resources.allocations %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-database text-light-3 mr-2"></i> DATABASES</td>
                    <td>-</td>
                    <td><%= products[i].resources.databases %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-database text-light-3 mr-2"></i> BACKUPS</td>
                    <td>-</td>
                    <td><%= products[i].resources.backups %></td>
                  </tr><center>
                    <a role="button" href="/products/buy?id=<%= products[i].id %>" class="btn btn-light btn-round px-5">Buy Now <i class="bi bi-caret-right"></i></a><br><br>
                    </center>
                </tbody>
              </table>
            </div>
          </div>
      </div>
      <% } %> 
   </div>
<%- include('../partials/js') %>
<%- include('../partials/footer') %>